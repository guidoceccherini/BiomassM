!is.na(forest_type) & forest_type %in% c(1, 2, 3)]
if(nrow(dt) > 0) {
dt[, hex_ID := hex_idx]
return(dt)
} else {
return(NULL)
}
}, error = function(e) {
return(NULL)
})
